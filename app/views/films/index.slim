                .film-title-block
                  = link_to film do
                    h3.header = film.name

              - elsif !film.offsite_link.blank?
                = link_to film.offsite_link, target: "_blank" do
                  .film-poster-block
                    - if film.poster_url.blank?
                      = image_tag("artsoon.jpg")
                    - else
                      = image_tag(film.poster_url)
                .film-title-block
                  = link_to film.offsite_link, target: "_blank" do
                    h3.header = film.name

              - else
                .film-poster-block
                  - if film.poster_url.blank?
                    = image_tag("artsoon.jpg")
                  - else
                    = image_tag(film.poster_url)
                .film-title-block
                  h3.header = film.name
